{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "owner": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": ""
            }
        },
        "projectName": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": ""
            }
        },
        "projectCode": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": ""
            }
        },
        "creationDate": {
            "type": "string",
            "defaultValue": ""
        },
        "ownerId": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "A owner of this resource group"
            }
        }
    },
    "variables": {
        "roleId": "8e3af657-a8ff-443c-a75c-2fe8c4bcb635"
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "2017-09-01",
            "name": "[guid(resourceGroup().id)]",
            "properties": {
                "roleDefinitionId": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', variables('roleId'))]",
                "principalId": "[parameters('ownerId')]"
            }
        },
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2019-05-01",
            "name": "[resourceGroup().name]",
            "location": "[resourceGroup().location]",
            "tags": {
                "ProjectOwner": "[parameters('owner')]",
                "ProjectName": "[parameters('projectName')]",
                "ProjectCode": "[parameters('projectCode')]",
                "CreationDate": "[parameters('creationDate')]"
            }
        }
    ]
}