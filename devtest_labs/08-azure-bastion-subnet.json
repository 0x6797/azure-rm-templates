{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnetName": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "A virtual networks name"
            }
        },
        "addressPrefix": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "A primary address scope in this Virtual Networks"
            }
        }
    },
    "variables": {
        "bastionCidr": "[concat(first(split(parameters('addressPrefix'), '/')), '/27')]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2019-11-01",
            "name": "[concat(parameters('vnetName'), '/AzureBastionSubnet')]",
            "properties": {
                "addressPrefix": "[variables('bastionCidr')]",
                "serviceEndpoints": [],
                "delegations": [],
                "privateEndpointNetworkPolicies": "Enabled",
                "privateLinkServiceNetworkPolicies": "Enabled"
            }
        }
    ]
}